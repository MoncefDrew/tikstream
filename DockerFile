# Use an official Node.js image
FROM node:18-slim

# Install ffmpeg and streamlink
RUN apt-get update && \
    apt-get install -y ffmpeg streamlink && \
    apt-get clean

# Create app directory
WORKDIR /app

# Copy package.json and install dependencies
COPY package*.json ./
RUN npm install

# Copy the rest of the project
COPY . .

# Set environment variables from .env if using Docker Compose (Render handles this otherwise)

# Start the app
CMD ["npm", "start"]
